    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Not Your Average, Bookies</title>
</head>
<body style="background-color: #b97474;">
      
    <main style="flex: 1 1 100%">
      {{> navbar}}
      <section class="container-fluid" id="content" >
        
      <div  id="mainWindow" class="row flex-nowrap" style="height: 75vh;">
          <section class="col-sm-12 col-md-2 text-center" style="flex:inherit;">
           {{> bookcase}}
          </section>

      
          <section class="col-sm-12 col-md-8 text-center overflow-auto rounded mx-2" style="flex-shrink:inherit; background-color: #74A5B9; border: 4mm ridge #0E73A3 ; box-shadow:
  13.7px 17.7px 8.8px -22px rgba(0, 0, 0, 0.02),
  20.2px 26.1px 8.7px -22px rgba(0, 0, 0, 0.027),
  23.1px 29.9px 7.6px -22px rgba(0, 0, 0, 0.032),
  24.4px 31.6px 6.5px -22px rgba(0, 0, 0, 0.036),
  24.8px 32.1px 6.2px -22px rgba(0, 0, 0, 0.042),
  24.6px 31.8px 7.7px -22px rgba(0, 0, 0, 0.051),
  24px 31px 16px -22px rgba(0, 0, 0, 0.07)
;">   
           {{{body}}}
          </section>
          <section class="col-sm-12 col-md-2 text-center" style="min-width: auto;">
        {{#if loggedIn}}
              {{ myBookies}}
        {{else}}
              {{>loginpage}}
        {{/if}}
          </section>

        </div>
      </section>
    </main>

</body>
